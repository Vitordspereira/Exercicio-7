import java.util.Scanner;
public class App{
    public static void main(String[] args) throws Exception{
        Double lado, area;
        Scanner S=new Scanner(System.in);

        System.out.println("Digite o valor do lateral quadrado");
        lado = S.nextDouble();

        area=lado*lado;

        System.out.println("O double da area do quadrado Ã© de" +(area*2));
    }
}